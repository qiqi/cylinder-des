FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inflow
    {
        type            turbulentInlet;
        referenceField  uniform (10 0 0);
        fluctuationScale (0.0 0.0 0.0);
        value           uniform (10 0 0);
    }

    outflow
    {
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }

    wall
    {
        type            noSlip;
    }

    near
    {
        type            cyclic;
    }

    far
    {
        type            cyclic;
    }
}

// ************************************************************************* //
