FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nuTilda;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inflow
    {
        type            fixedValue;
        value           uniform 3E-7;
    }

    outflow
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }

    wall
    {
        type            fixedValue;
        value           uniform 1E-10;
    }

    near
    {
        type            cyclic;
    }

    far
    {
        type            cyclic;
    }
}

